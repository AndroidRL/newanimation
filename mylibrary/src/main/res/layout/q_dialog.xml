<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F5F5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/btn_hide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_hide" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:includeFontPadding="false"
                    android:text="Hide Ad"
                    android:textColor="#535353"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:includeFontPadding="false"
                    android:text="Make ad as irrelevant"
                    android:textColor="#8E8E8E"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@drawable/ic_report" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:includeFontPadding="false"
                    android:text="Report Ad"
                    android:textColor="#535353"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:includeFontPadding="false"
                    android:text="Make ad as offensive or inappropriate"
                    android:textColor="#8E8E8E"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/back_hide"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:rotation="180"
                android:src="@drawable/ic_right_arrow"
                android:tint="#AAA9A9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:text="Hide Ad"
                android:textColor="#3D3D3D"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#AAA9A9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:src="@drawable/ic_hide"
                android:tint="#646363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:includeFontPadding="false"
                android:text="Please tell us why you hid this ad."
                android:textColor="#4E4E4E"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_p_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Irrelevant"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hide_p_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Repetitive"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_p_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Interrupted me"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hide_p_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Unexpected"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hide_p_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Too many ads"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hide_p_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Offensive"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp">

            <ImageView
                android:id="@+id/back_report"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="7dp"
                android:rotation="180"
                android:src="@drawable/ic_right_arrow"
                android:tint="#AAA9A9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="5dp"
                android:text="Report Ad"
                android:textColor="#3D3D3D"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:background="#AAA9A9" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingHorizontal="15dp"
            android:paddingVertical="8dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="2dp"
                android:src="@drawable/ic_hide"
                android:tint="#646363" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:includeFontPadding="false"
                android:text="Help us understand what's happening. Why don't you want to see this?"
                android:textColor="#4E4E4E"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|start"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:paddingVertical="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_p_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                        android:text="Sexually inappropriate"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_p_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Illegal"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_p_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Offensive"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_p_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Spam"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/report_p_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Disagreeable"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/report_p_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:background="@drawable/app_btn"
                    android:backgroundTint="#D5F1EDED"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="5dp"
                    android:text="Other"
                    android:textColor="#5D5D5D"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>