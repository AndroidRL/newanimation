<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_unit_qureka"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F5F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_as_header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/q_banner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/q_banner_1" />

            <TextView
                android:id="@+id/q_btn"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:background="@drawable/app_btn"
                android:backgroundTint="@color/fix_black"
                android:gravity="center"
                android:singleLine="true"
                android:text="Play"
                android:textColor="@color/fix_white"
                android:textSize="13.0sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gnt_outline_shape"
            android:backgroundTint="@color/fix_black"
            android:padding="2dp"
            android:text="Ad"
            android:textColor="@color/fix_white"
            android:textSize="10sp" />

    </RelativeLayout>

</LinearLayout>